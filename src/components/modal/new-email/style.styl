new-email-bg-color = #fff
new-email-border-color = #707070
new-email-shadow-color = rgba(0, 0, 0, 0.16)

.new-email
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

  width 912px
  background-color new-email-bg-color
  border 1px solid new-email-border-color
  border-radius 4px
  box-shadow 10px 10px 6px 0 new-email-shadow-color
  z-index 200